<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_pg">

    <!-- Dark overlay -->
    <View
        android:id="@+id/bgOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CARD -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/registerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="420dp"
                android:background="@drawable/login_card_bg"
                android:elevation="12dp"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/txtRegTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_primary_dark"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtRegSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_subtitle"
                    android:textSize="13sp"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="20dp"/>

                <!-- CIN -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_cin"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextCin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputstyle"
                    android:hint="@string/reg_cin"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Firstname -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_firstname"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputstyle"
                    android:hint="@string/reg_firstname"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Lastname -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_lastname"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextLastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputstyle"
                    android:hint="@string/reg_lastname"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Username -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_username"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextRegUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputstyle"
                    android:hint="@string/reg_username"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_password"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputstyle"
                    android:hint="@string/reg_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Confirm Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_confirm_password"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mf_input_text"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextRegConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputstyle"
                    android:hint="@string/reg_confirm_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Create account button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_create_account"
                    android:textColor="@color/mf_button_text"
                    android:textSize="15sp"
                    android:allCaps="false"
                    android:background="@drawable/btnstyle"
                    android:layout_marginBottom="12dp"/>

                <!-- Back to login -->
                <TextView
                    android:id="@+id/txtBackToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_back_to_login"
                    android:textColor="@color/mf_primary_dark"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
