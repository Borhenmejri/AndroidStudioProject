<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_pg">

    <!-- Dark overlay -->
    <View
        android:id="@+id/bgOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000088"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Centered card -->
    <LinearLayout
        android:id="@+id/editCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="420dp"
        android:orientation="vertical"
        android:background="@drawable/login_card_bg"
        android:padding="24dp"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Expense"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/mf_primary_dark"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:background="@drawable/inputstyle"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/mf_input_text"
            android:textColorHint="@color/mf_input_text" />
        <!-- ðŸ‘† UNTIL HERE -->

        <EditText
            android:id="@+id/editTextCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:background="@drawable/inputstyle"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/mf_input_text"
            android:textColorHint="@color/mf_input_text" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (optional)"
            android:background="@drawable/inputstyle"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/mf_input_text"
            android:textColorHint="@color/mf_input_text" />

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note (optional)"
            android:background="@drawable/inputstyle"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/mf_input_text"
            android:textColorHint="@color/mf_input_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/mf_button_text"
            android:background="@drawable/btnstyle"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/btnCancelExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/secondary_btn"
            android:textColor="@color/mf_primary_dark"
            android:padding="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
