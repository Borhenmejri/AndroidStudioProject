<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_pg">

    <!-- Dark overlay over background -->
    <View
        android:id="@+id/bgOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000088"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TOP BAR (welcome + username) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="36dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtDashHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_hello"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtDashUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amjed"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- MAIN CARD -->
    <LinearLayout
        android:id="@+id/dashboardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:maxWidth="420dp"
        android:background="@drawable/login_card_bg"
        android:orientation="vertical"
        android:elevation="12dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Balance row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_balance_label"
                android:textColor="@color/mf_input_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtBalanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="@color/mf_primary_dark"
                android:textStyle="bold"
                android:textSize="26sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E7F4"
            android:layout_marginBottom="16dp" />

        <!-- Primary action: Add Expense -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_add_expense"
            android:textColor="@color/mf_button_text"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/btnstyle"
            android:layout_marginBottom="12dp" />

        <!-- Secondary actions as text buttons -->
        <TextView
            android:id="@+id/btnGoHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_history"
            android:textColor="@color/mf_primary_dark"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@drawable/secondary_btn"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/btnGoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_profile"
            android:textColor="@color/mf_primary_dark"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@drawable/secondary_btn" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
