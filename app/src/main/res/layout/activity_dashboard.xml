<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_pg">

    <!-- Overlay -->
    <View
        android:id="@+id/bgOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top welcome text -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtDashHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_hello"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtDashUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amjed"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Main card -->
    <LinearLayout
        android:id="@+id/dashboardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:maxWidth="420dp"
        android:background="@drawable/login_card_bg"
        android:orientation="vertical"
        android:elevation="12dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Balance -->
        <TextView
            android:id="@+id/txtBalanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_balance_label"
            android:textColor="@color/mf_input_text"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txtBalanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/mf_primary_dark"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_marginBottom="24dp"/>

        <!-- Add Expense button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_add_expense"
            android:textColor="@color/mf_button_text"
            android:background="@drawable/btnstyle"
            android:textSize="15sp"
            android:allCaps="false"
            android:layout_marginBottom="12dp"/>

        <!-- Expense History -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_history"
            android:textColor="@color/mf_primary_dark"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Profile -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash_profile"
            android:textColor="@color/mf_primary_dark"
            android:background="@android:color/transparent"
            android:textSize="14sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
