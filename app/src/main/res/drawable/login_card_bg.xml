<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Slightly off-white card for contrast -->
    <solid android:color="#F9FAFB" />

    <!-- Rounded corners -->
    <corners android:radius="22dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#1F2933" />

    <!-- Inner padding -->
    <padding
        android:left="24dp"
        android:top="24dp"
        android:right="24dp"
        android:bottom="24dp" />
</shape>
